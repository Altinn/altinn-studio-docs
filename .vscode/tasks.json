{
    // See https://code.visualstudio.com/docs/editor/tasks for documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Hugo Server",
            "type": "shell",
            "command": "${workspaceRoot}/hugo serve --navigateToChanged --disableFastRender",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "problemMatcher": {
                "applyTo": "allDocuments",
                "fileLocation": "absolute",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Change detected, rebuilding site",
                    "endsPattern": "Total in \\d+ ms",
                },
                "pattern": [
                    {
                        "kind": "location",
                        "regexp": "^\\s*?([A-Z]+)\\s+[\\d/]+\\s+[\\d:]+\\s(.*?\"((.*):(\\d+):(\\d+))\".*)$",
                        "severity": 1,
                        "file": 4,
                        "line": 5,
                        "column": 6,
                        "message": 2
                    }
                ]
            }
        }
    ]
}
